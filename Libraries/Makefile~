# Makefile

COMPILER	:=  gfortran
VPATH		:=  ~/Documentos/SparseKit/SparseKit/Source
BINDIR		:=  Bin
OBJECTDIR	:=  Objects
FFLAGS		:=  -g -O3 -static -J$(OBJECTDIR)

OBJECTS := $(BINDIR)/utilities.o $(BINDIR)/quicksort.o $(BINDIR)/SparseKit.o

main: $(OBJECTS)
	ar rcv sparseLib.a $(OBJECTS)

$(BINDIR)/%.o : $(VPATH)/%.f90
	$(COMPILER) $(FFLAGS) -c $^ -o $@ 

%.a : $(BINDIR)/%.o
	ar rcv $^ $@

clean:
	rm -f $(BINDIR)/*.o $(OBJECTDIR)/*.mod *.a
